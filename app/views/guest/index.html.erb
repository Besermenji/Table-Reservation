<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<h3>
				My restaurant visits:
			</h3>
			<br>
			<table class="table table-hover table-striped table-condensed">
				<thead>
					<tr>
						<th>
							Restaurant
						</th>
						<th>
							Date
						</th>
						<th>
							Average Rating
						</th>
						<th>
							Your Rating
						</th>
					</tr>
				</thead>
				<tbody>
				<% @restaurants.each_with_index do |restaurant, index|%>
					<tr>
						<td>
							<%= restaurant.name %>
						</td>
						<td>
							<%= @ratings[index].visited_date %>
						</td>
						<td>
						        <%= restaurant.average_rating%>	
						</td>
						<td>
							<% if @ratings[index].rating.nil? %>
							  <%= form_tag rate_restaurant_path(@ratings[index]) do %>
						    <%= select_tag 'rating', options_for_select(1..5), :onchange => "this.form.submit();", class: 'form-control' %>
						  <% end %>
						<% else %>
					           <%= @ratings[index].rating %>	
						<% end %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
