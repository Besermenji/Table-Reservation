<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4">

<p id="notice"><%= notice %></p>

<h4>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</h4>

<h4>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</h4>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to 'New Meal', new_restaurant_meal_path(@restaurant) %>|
<%= link_to 'New Table', new_restaurant_table_path(@restaurant) %>

		</div>
		<div class="col-md-4">
		</div>
	</div>

<br>
	<div class="row">
		<div class="col-md-5">
<table class="table table-striped">
  <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="2"></th>
      </tr>
  </thead>
  <tbody>
    <% @restaurant.meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.description %></td>
        <td><%= meal.price %></td>
        <td><%= link_to 'Edit', edit_restaurant_meal_path(@restaurant.id, meal) %></td>
        <td><%= link_to 'Destroy', [@restaurant, meal], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>		
</div>
		<div class="col-md-2">
		</div>
		<div class="col-md-5">
<%= form_tag restaurant_bulk_reserve_path(@restaurant), method: 'post' do %>
<table class="table table-striped">
  <thead>
      <tr>
        <th>Name</th>
        <th>Chairs number</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
    <% @restaurant.tables.each do |table| %>
      <tr>
        <td><%= table.name %></td>
        <td><%= table.no_chairs %></td>
        <td><%= link_to 'Edit', edit_restaurant_table_path(@restaurant.id, table) %></td>
	<td><%= link_to 'Destroy', [@restaurant, table], method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td>Reserve? <%= check_box_tag 'table ' << table.id.to_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Reservation date <%= datetime_select 'reservation','time', {minute_step: 15} %></p>
<br>
<p>Reservation length(hours) <%= number_field_tag 'hours' %></p>
<br>
<%= submit_tag 'Reserve selected!' %>
<%end%>
		</div>
	</div>





</div>
